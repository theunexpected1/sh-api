<%-include('../shared/header.ejs',{active:'properties',parent:'settings'})%>
<div class="content-inner">
    <!-- Page Header-->
    <header class="page-header">
        <div class="container-fluid d-flex flex-column flex-md-row justify-content-between align-items-center">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active fw-700" aria-current="page">Reset Pssword</li>
                </ol>
            </nav>
        </div>
    </header>
    <div class="container-fluid pb-0">
        <div class="row wrapper mt-0 mb-0 pt-4 bg-white pb-2 pl-4">
            <div class="col-sm-12">
                <div class="form-header">
                    Reset Password
                </div>
            </div>
        </div>
        <form id="passwordForm">
            <div class="row wrapper bg-white mt-0 mb-0 mx-0">
                <div class="col-sm-12">
                    <div class="form-section">
                        <div class="mx-4">
                            <div class="row">
                                <div class="form-group form-group-sm col-sm-10">
                                    <div class="row">
                                        <label class="col-sm-3 col-form-label">Old Pssword*</label>
                                        <div class="col-sm-8">
                                            <input type="hidden" name="id" value="<%=session._id%>">
                                            <input type="password" class="form-control border-secondary" name="old_password">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group form-group-sm col-sm-10">
                                    <div class="row">
                                        <label class="col-sm-3 col-form-label">New Password*</label>
                                        <div class="col-sm-8">
                                            <input type="password" id="password" class="form-control border-secondary" name="new_password">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group form-group-sm col-sm-10">
                                    <div class="row">
                                        <label class="col-sm-3 col-form-label">Confirm Password*</label>
                                        <div class="col-sm-8">
                                            <input type="password" class="form-control border-secondary" name="confirm_password">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-10 d-flex justify-content-center d-block mx-auto pt-3 pb-4">
                    <button class="col-sm-2 btn btn-block btn-primary saveBtn">Save</button>
                </div>
            </div>
    </div>
    <script>
        $("#passwordForm").validate({
            normalizer: function (value) {
                return $.trim(value);
            },
            rules: {
                old_password: {
                    required: true
                },
                new_password: {
                    required: true,
                },
                confirm_password: {
                    required: true,
                    equalTo: '#password'
                }
            },
            messages: {
                old_password: {
                    required: 'Current password is required.'
                },
                new_password: {
                    required: 'New password is required.'
                },
                confirm_password: {
                    required: 'Confirm Password is required.',
                    equalTo: 'Confirm Password and New Password must be the same.'
                }
            },
            submitHandler: function (form) {
                $('.saveBtn').prop('disabled', true);
                $.ajax({
                    type: "POST",
                    url: "/admin/resetpassword",
                    data: $(form).serialize(),
                    dataType: 'json',
                    success: function (data) {
                        if (data.status == 1) {
                            if (data.message) {
                                    $.confirm({
                                        title: 'Success!',
                                        content: data.message,
                                        buttons: {
                                            ok: function () {
                                                document.getElementById("passwordForm").reset();
                                                window.location.reload();
                                            }
                                        }
                                    });
                                    // document.getElementById("passwordForm").reset();
                                }
                            } else {
                                if (data.errors) {
                                    for (i = 0; i < data.errors.length; i++) {
                                        toastr["error"](data.errors[i]);
                                    }
                                }
                                if (data.message) {
                                    toastr["error"](data.message);
                                }
                            }
                        $('.saveBtn').prop('disabled', false);
                    },
                    error: function (error) {
                        $('.saveBtn').prop('disabled', false);
                    }
                });
                return false;
            }
        });
    </script>
    <%-include('../shared/footer.ejs')%>