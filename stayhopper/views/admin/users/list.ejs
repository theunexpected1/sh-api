<%-include('../shared/header.ejs',{active:'users',parent:''})%>
    <div class="content-inner">
        <!-- Page Header-->
        <header class="page-header">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="">User Management</a>
                        </li>
                    </ol>
                </nav>
            </div>
        </header>
        <div class="container-fluid">
            <% users.forEach((user) => { %>
                <form method="get" action="/admin/users/view/<%=user._id%>">
                    <div class="row property-list justify-content-center align-items-center mt-4 mb-5 has-shadow">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-12 property-list-items d-flex justify-content-around flex-column flex-md-row flex-nowrap">
                            <dl>
                                <dt>Name</dt>
                                <dd>
                                    <%=user.name%>
                                </dd>
                            </dl>
                            <dl>
                                <dt>Email</dt>
                                <dd>
                                    <%=user.email %>
                                </dd>
                            </dl>
                            <dl>
                                <dt>Mobile</dt>
                                <dd>
                                    <%=user.mobile%>
                                </dd>
                            </dl>
                            <dl>
                                <dt>No of Bookings</dt>
                                <dd>
                                    <%=user.count%> Bookings</dd>
                            </dl>
                            <dl>
                                <dt>Amount</dt>
                                <dd>
                                    <%=user.totalAmt%> AED</dd>
                            </dl>
                            <dl class="d-flex align-items-center mt-3 mt-md-0">
                                <button type="submit" class="viewbtn btn btn-secondary btn-square btn-full-mobile px-3" data-id="<%=user._id%>">View</button>
                            </dl>
                        </div>
                    </div>
                </form>
                <% }) %>
                    <%- include('../shared/pagination') %>
        </div>
        <%-include('../shared/footer.ejs')%>