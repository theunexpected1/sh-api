<%-include('../shared/header.ejs',{active:'',parent:'settings'})%>
    <div class="content-inner">
        <!-- Page Header-->
        <header class="page-header">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item" aria-current="page">
                            <a href="/admin/generalsettings">General Settings</a>
                        </li>
                        <li class="breadcrumb-item active fw-700" aria-current="page">Property Ratings</li>
                    </ol>
                </nav>
            </div>
        </header>
        <div class="container-fluid">
            <div class="row wrapper mt-0 mb-0 pt-4 bg-white pb-2 px-4">
                <div class="col-sm-12 mt-2 mt-md-3 mb-2 mb-md-2">
                    <div class="header-buttons d-flex justify-content-end">
                        <button type="button" class="btn btn-primary mr-md-4 newBtn">
                            <i class="icon-plus-circle"></i> Add New</button>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-12 text-left" style="overflow-x:auto">
                    <table class="table table-hover" style="overflow-x:scroll;">
                        <thead class="mt-5">
                            <tr>
                                <th>Property Ratings</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% propertyRatings.forEach(property=>{ %>
                                <tr>
                                    <td style="width: 80%" class="d-flex align-items-center col-10">
                                        <%=property.name%>
                                    </td>
                                    <td style="width: 10%">
                                        <a id="show-panel" href="#" class="editBtn" data-id="<%=property._id%>">
                                            <i class="icon-edit font-lg"></i>
                                        </a>
                                    </td>
                                    <td style="width: 10%" class="col-2">
                                        <a id="show-panel" href="#" class="deleteBtn" data-id="<%=property._id%>">
                                            <i class="icon-trash-2 font-lg"></i>
                                        </a>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="modal bd-example-modal-lg" id="newPropertyRating" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Create New Property Rating</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="newPropertyRatingForm">
                            <div class="row wrapper mt-4 mb-5 bg-white align-items-center">
                                <div class="col-sm-6 mt-2 mt-md-3 mb-2 mb-md-2">
                                    <div class="form-inline row">
                                        <label for="inputPassword" class="col-sm-3 col-form-label">Property Rating</label>
                                        <div class="col-sm-9">
                                            <input name="property_rating" type="text" class="form-control border-secondary" placeholder="Enter Property Rating" style="width: 80%;">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 mt-2 mt-md-3 mb-2 mb-md-2">
                                    <div class="form-inline row">
                                        <label for="inputPassword" class="col-sm-3 col-form-label">Rating Value</label>
                                        <div class="col-sm-9">
                                            <input name="property_rating_value" type="number" class="form-control border-secondary" placeholder="Enter Rating Value" style="width: 80%;">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 mt-3 mt-md-5 mb-2 mb-md-2">
                                    <div class="header-buttons d-flex justify-content-center">
                                        <button type="submit" class="btn btn-primary btn-lg mr-md-4 pl-5 pr-5 saveBtn">SAVE</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal bd-example-modal-lg" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Edit Property Rating</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="editPropertyRatingForm">
                            <div class="row wrapper mt-4 mb-5 bg-white align-items-center">
                                <div class="col-sm-6 mt-2 mt-md-3 mb-2 mb-md-2">
                                    <div class="form-inline row">
                                        <label for="inputPassword" class="col-sm-3 col-form-label">Property Rating</label>
                                        <div class="col-sm-9">
                                            <input type="hidden" name="id">
                                            <input name="property_rating" type="text" class="form-control border-secondary" placeholder="Enter Property Rating" style="width: 80%;">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 mt-2 mt-md-3 mb-2 mb-md-2">
                                    <div class="form-inline row">
                                        <label for="inputPassword" class="col-sm-3 col-form-label">Rating Value</label>
                                        <div class="col-sm-9">
                                            <input name="property_rating_value" type="number" class="form-control border-secondary" placeholder="Enter Rating Value" style="width: 80%;">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 mt-3 mt-md-5 mb-2 mb-md-2">
                                    <div class="header-buttons d-flex justify-content-center">
                                        <button type="submit" class="btn btn-primary btn-lg mr-md-4 pl-5 pr-5 saveBtn">SAVE</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <script>
            $('.newBtn').on('click', function () {
                $('#newPropertyRating').modal('toggle');
            });
            $("#newPropertyRatingForm").validate({
                normalizer: function (value) {
                    return $.trim(value);
                },
                rules: {
                    property_rating: {
                        required: true
                    },
                    property_rating_value: {
                        required: true
                    }
                },
                messages: {
                    property_rating: {
                        required: "Property Rating is required",
                    },
                    property_rating_value: {
                        required: "Rating Value is required",
                    }
                },
                submitHandler: function (form) {
                    $('.saveBtn').prop('disabled', true);
                    var form = document.getElementById('newPropertyRatingForm');
                    var data = $(form).serialize();
                    $.ajax({
                        type: "POST",
                        url: "/admin/propertyratings",
                        data: data,
                        dataType: 'json',
                        success: function (data) {
                            if (data.status == 1) {
                                if (data.message) {
                                    $.confirm({
                                        title: 'Success!',
                                        content: data.message,
                                        buttons: {
                                            ok: function () {
                                                document.getElementById("newPropertyRatingForm").reset();
                                                window.location.reload();
                                            }
                                        }
                                    });
                                    document.getElementById("newPropertyRatingForm").reset();
                                }
                            } else {
                                if (data.errors) {
                                    for (i = 0; i < data.errors.length; i++) {
                                        toastr["error"](data.errors[i]);
                                    }
                                }
                                if (data.message) {
                                    toastr["error"](data.message);
                                }
                            }
                            $('.saveBtn').prop('disabled', false);
                        },
                        error: function (error) {
                            $('.saveBtn').prop('disabled', false);
                        }
                    });
                    return false;
                }
            });
            $('.deleteBtn').on('click', function () {
                let id = $(this).data('id');
                $.confirm({
                    title: 'Warning',
                    buttons: {
                        continue: function () {
                            // alert(id);
                            $.ajax({
                                url: '/admin/propertyratings/delete',
                                data: { id: id },
                                type: 'get',
                                async: false,
                                success: function (data) {
                                    window.location.reload();
                                }
                            });
                        },
                        cancel: function () {

                        }
                    }
                });
            });
            $('.editBtn').on('click', function () {
                let id = $(this).data('id');
                $.ajax({
                    url: '/admin/propertyratings/' + id,
                    type: 'get',
                    dataType: 'json',
                    success: function (data) {
                        if (data.status == 1) {
                            let res = data.data;
                            $('#editModal').modal('toggle');
                            var form = $('form#editPropertyRatingForm');
                            $(form).find("input[name='property_rating']").val(res.name);
                            $(form).find("input[name='property_rating_value']").val(res.value);
                            $(form).find("input[name='id']").val(res._id);
                            if (res.image) {
                                $(form).find("#imagePreview2").css('background-image', 'url(' + res.image + ')');
                            } else {
                                $(form).find("#imagePreview2").css('background-image', 'url("/public/img/quickadd.png")');
                            }
                        }
                    }
                });
            });
            $("#editPropertyRatingForm").validate({
                normalizer: function (value) {
                    return $.trim(value);
                },
                rules: {
                    property_rating: {
                        required: true
                    },
                    property_rating_value: {
                        required: true
                    }
                },
                messages: {
                    property_rating: {
                        required: "Property Rating is required",
                    },
                    property_rating_value: {
                        required: "Rating Value is required",
                    }
                },
                submitHandler: function (form) {
                    $('.saveBtn').prop('disabled', true);
                    var form = document.getElementById('editPropertyRatingForm');
                    var data = $(form).serialize();
                    $.ajax({
                        type: "POST",
                        url: "/admin/propertyratings/update",
                        data: data,
                        dataType: 'json',
                        success: function (data) {
                            if (data.status == 1) {
                                if (data.message) {
                                    $.confirm({
                                        title: 'Success!',
                                        content: data.message,
                                        buttons: {
                                            ok: function () {
                                                // document.getElementById("editPropertyTypeForm").reset();
                                            }
                                        }
                                    });
                                    // document.getElementById("editPropertyTypeForm").reset();
                                    // $("#imagePreview2").css('background-image', 'url("/public/img/quickadd.png")');
                                }
                            } else {
                                if (data.errors) {
                                    for (i = 0; i < data.errors.length; i++) {
                                        toastr["error"](data.errors[i]);
                                    }
                                }
                                if (data.message) {
                                    toastr["error"](data.message);
                                }
                            }
                            $('.saveBtn').prop('disabled', false);
                        },
                        error: function (error) {
                            $('.saveBtn').prop('disabled', false);
                        }
                    });
                    return false;
                }
            });
        </script>
        <%-include('../shared/footer.ejs')%>