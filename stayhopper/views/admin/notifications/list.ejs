<%-include('../shared/header.ejs',{active:'',parent:'settings'})%>
    <div class="content-inner">
        <!-- Page Header-->
        <header class="page-header">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item" aria-current="page">
                            <a href="/admin/generalsettings">General Settings</a>
                        </li>
                        <li class="breadcrumb-item active fw-700" aria-current="page">Notifications</li>
                    </ol>
                </nav>
            </div>
        </header>
        <div class="container-fluid">
            <div class="row wrapper mt-0 mb-0 pt-4 bg-white pb-2 px-4">
                <div class="col-sm-6 mb-4">
                    <div class="form-header mt-2 mr-md-4 <% if(type!="general"){ %>disabled<% } %>">
                        <a href="/admin/notifications">General Notifications</a> 
                    </div>
                    <div class="form-header mt-2 <% if(type=="general"){ %>disabled<% } %>">
                        <a href="/admin/notifications/booking">Booking Notifications</a> 
                    </div>
                </div>
                <% if(type=="general"){ %>
                <div class="col-sm-12 mt-2 mt-md-3 mb-2 mb-md-2">
                    <div class="header-buttons d-flex justify-content-end">
                        <button type="button" class="btn btn-primary mr-md-4" data-toggle="modal" data-target=".bd-example-modal-lg" data-whatever="@mdo">
                            <i class="icon-plus-circle"></i>Add New</button>
                    </div>
                </div>
                <% } %>
                <div class="col-lg-12 col-md-12 col-sm-12 col-12 text-left" style="overflow-x:auto">
                    <table class="table table-hover" style="overflow-x:scroll;">
                        <thead class="mt-5">
                            <tr>
                                <% if(type=="booking"){ %>
                                    <th>Booking No</th>
                                <% } %>
                                <th>Title</th>
                                <th>Description</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% notifications.forEach(notification=>{ %>
                                <tr>
                                    <% if(type=="booking"){ %>
                                        <th>
                                            <%=notification.booking_no%>
                                        </th>
                                    <% } %>
                                    <td class="d-flex align-items-center col-10">
                                        <%=notification.title%>
                                    </td>
                                    <td style="width: 50%">
                                        <%=notification.description%>
                                    </td>
                                    <td style="width: 10%">
                                        <% if(type!="general"){ %>
                                        <a title="resend notification" href="#" onclick="resendnotification('<%=notification._id%>')">
                                            <i class="icon-alarm font-lg"></i>
                                        </a>
                                        <% } %>
                                    </td>
                                    <td style="width: 10%" class="col-2">
                                        <a id="show-panel" class="deleteBtn" href="#" data-id="<%=notification._id%>">
                                            <i class="icon-trash-2 font-lg"></i>
                                        </a>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                    <%- include('../shared/pagination') %>
                </div>
            </div>
        </div>
        <div class="modal bd-example-modal-lg" id="newModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Create New Notification</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="newFaqForm">
                            <div class="row wrapper mt-4 mb-5 bg-white align-items-center" style="margin-top: -15px!important;">
                                <div class="col-sm-6 mt-2 mt-md-3 mb-2 mb-md-2">
                                    <div class="form-inline row">
                                        <label for="inputPassword" class="col-sm-3 col-form-label">Title</label>
                                        <div class="col-sm-9">
                                            <input name="title" type="text" class="form-control border-secondary" placeholder="Enter Title" style="width: 80%;">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 mt-2 mt-md-3 mb-2 mb-md-2">
                                    <div class="form-inline row">
                                        <label for="inputPassword" class="col-sm-3 col-form-label">Description</label>
                                        <div class="col-sm-9">
                                            <textarea class="form-control border-secondary" rows="5" name="description" placeholder="Enter Description" style="width: 80%;height: 90px;margin-top: 50px"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 mt-3 mt-md-5 mb-2 mb-md-2">
                                    <div class="header-buttons d-flex justify-content-center">
                                        <button type="submit" class="btn btn-primary btn-lg mr-md-4 pl-5 pr-5 saveBtn">Save</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal bd-example-modal-lg" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Edit Notification</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="editFaqForm" enctype="multipart/form-data">
                            <div class="row wrapper mt-4 mb-5 bg-white align-items-center" style="margin-top: -15px!important;">
                                <div class="col-sm-6 mt-2 mt-md-3 mb-2 mb-md-2">
                                    <div class="form-inline row">
                                        <label for="inputPassword" class="col-sm-3 col-form-label">Title</label>
                                        <div class="col-sm-9">
                                            <input type="hidden" name="id">
                                            <input name="title" type="text" class="form-control border-secondary" placeholder="Enter Title" style="width: 80%;">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 mt-2 mt-md-3 mb-2 mb-md-2">
                                    <div class="form-inline row">
                                        <label for="inputPassword" class="col-sm-3 col-form-label">Description</label>
                                        <div class="col-sm-9">
                                                <textarea class="form-control border-secondary" rows="5" name="description" placeholder="Enter Description" style="width: 80%;height: 90px;margin-top: 50px"></textarea>
                                            <!-- <input name="description" type="text" class="form-control border-secondary" placeholder="Please Enter Value"> -->
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 mt-3 mt-md-5 mb-2 mb-md-2">
                                    <div class="header-buttons d-flex justify-content-center">
                                        <button type="submit" class="btn btn-primary btn-lg mr-md-4 pl-5 pr-5 saveBtn">Save</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <script>
            function resendnotification(id){
                $.getJSON('/admin/notifications/resendnotification/notify',{id},function(data){
                    if(data.status == true){
                        toastr["success"]("Notification send successfully!");
                    }else{
                        toastr["error"]("Could not send Notification!");
                    }
                });
            }
            $("#newFaqForm").validate({
                normalizer: function (value) {
                    return $.trim(value);
                },
                rules: {
                    title: {
                        required: true
                    },
                    description: {
                        required: true,
                    }
                },
                messages: {
                    title: {
                        required: "Title is required",
                    },
                    description: {
                        required: "Description is required",
                    }
                },
                submitHandler: function (form) {
                    $('.saveBtn').prop('disabled', true);
                    var form = document.getElementById('newFaqForm');
                    var data = $(form).serialize();
                    $.ajax({
                        type: "POST",
                        url: "/admin/notifications",
                        data: data,
                        dataType: 'json',
                        success: function (data) {
                            if (data.status == 1) {
                                if (data.message) {
                                    $.confirm({
                                        title: 'Success!',
                                        content: data.message,
                                        buttons: {
                                            ok: function () {
                                                document.getElementById("newFaqForm").reset();
                                                window.location.reload();
                                            }
                                        }
                                    });
                                    document.getElementById("newFaqForm").reset();
                                }
                            } else {
                                if (data.errors) {
                                    for (i = 0; i < data.errors.length; i++) {
                                        toastr["error"](data.errors[i]);
                                    }
                                }
                                if (data.message) {
                                    toastr["error"](data.message);
                                }
                            }
                            $('.saveBtn').prop('disabled', false);
                        },
                        error: function (error) {
                            $('.saveBtn').prop('disabled', false);
                        }
                    });
                    return false;
                }
            });
            $('.deleteBtn').on('click', function () {
                let id = $(this).data('id');
                $.confirm({
                    title: 'Warning',
                    buttons: {
                        continue: function () {
                            // alert(id);
                            $.ajax({
                                url: '/admin/notifications/delete/' + id,
                                // data: { id: id },
                                type: 'get',
                                async: false,
                                success: function (data) {
                                    window.location.reload();
                                }
                            });
                        },
                        cancel: function () {

                        }
                    }
                });
            });
            $('.editBtn').on('click', function () {
                let id = $(this).data('id');
                $.ajax({
                    url: '/admin/notifications/' + id,
                    type: 'get',
                    dataType: 'json',
                    success: function (data) {
                        if (data.status == 1) {
                            let res = data.data;
                            $('#editModal').modal('toggle');
                            var form = $('form#editFaqForm');
                            $(form).find("input[name='title']").val(res.title);
                            $(form).find("textarea[name='description']").val(res.description);
                            $(form).find("input[name='id']").val(res._id);
                        }
                    }
                });
                // console.log();
            });
            $("#editFaqForm").validate({
                normalizer: function (value) {
                    return $.trim(value);
                },
                rules: {
                    title: {
                        required: true
                    },
                    description: {
                        required: true,
                    }
                },
                messages: {
                    title: {
                        required: "Title is required",
                    },
                    description: {
                        required: "Description is required",
                    }
                },
                submitHandler: function (form) {
                    $('.saveBtn').prop('disabled', true);
                    var form = document.getElementById('editFaqForm');
                    var data = $(form).serialize();
                    $.ajax({
                        type: "POST",
                        url: "/admin/notifications/update",
                        data: data,
                        dataType: 'json',
                        success: function (data) {
                            if (data.status == 1) {
                                if (data.message) {
                                    $.confirm({
                                        title: 'Success!',
                                        content: data.message,
                                        buttons: {
                                            ok: function () {
                                                document.getElementById("editFaqForm").reset();
                                                window.location.reload()
                                            }
                                        }
                                    });
                                    // document.getElementById("editPropertyTypeForm").reset();
                                    // $("#imagePreview2").css('background-image', 'url("/public/img/quickadd.png")');
                                }
                            } else {
                                if (data.errors) {
                                    for (i = 0; i < data.errors.length; i++) {
                                        toastr["error"](data.errors[i]);
                                    }
                                }
                                if (data.message) {
                                    toastr["error"](data.message);
                                }
                            }
                            $('.saveBtn').prop('disabled', false);
                        },
                        error: function (error) {
                            $('.saveBtn').prop('disabled', false);
                        }
                    });
                    return false;
                }
            });
        </script>
        <%-include('../shared/footer.ejs')%>