<%-include('../shared/header.ejs',{active:'',parent:'settings'})%>
    <div class="content-inner">
        <!-- Page Header-->
        <header class="page-header">
            <div class="container-fluid d-flex flex-column flex-md-row justify-content-between align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="#">Hotel Management</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#">Properties</a>
                        </li>
                        <li class="breadcrumb-item active fw-700" aria-current="page">Policies</li>
                    </ol>
                </nav>
            </div>
        </header>
        <%-include('../shared/property_crump.ejs',{current_page:'policies'})%>
        <div class="container-fluid">
            <div class="row wrapper mt-4 mb-0 bg-white">
       
                <div class="col-sm-12 col-md-12 col-sm-12 col-12 privacy-policy-container mt-3 mx-auto w-900 mt-4 mb-2">
                    <h4 class="mb-4">Privacy Policy</h4>
                    <% if(property.policies.length>0){ %>
                    <ul class="policy-items list-unstyled">
                            <% property.policies.forEach((policy)=>{ %>
                            <li>
                                <%=policy.name%>
                            </li>
                            <% }); %>
                    </ul>
                    <% }else{ %>
                        <div class="alert alert-warning" role="alert">
                                There's nothing here!
                        </div>
                    <% } %>
                </div>
                <div class="col-sm-12 col-md-12 col-sm-12 col-12 privacy-policy-container mt-3 mx-auto w-900 mb-4">
                    <h4 class="mb-4">Terms and Conditions</h4>
                    <% if(property.terms.length>0){ %>
                    <ul class="policy-items list-unstyled">
                            <% property.terms.forEach((term)=>{ %>
                            <li>
                                <%=term.value%>
                            </li>
                            <% }); %>
                    </ul>
                    <% }else{ %>
                        <div class="alert alert-warning" role="alert">
                                There's nothing here!
                        </div>
                    <% } %>
                </div>
            </div>
                <div class="col-sm-4 d-flex justify-content-center d-block mx-auto pt-3 pb-4 mt-4">
                 <a href="/admin/policies/update/<%=property_id%>" class="mr-2"><button class="btn btn-block btn-secondary loginBtn saveBtn px-4">Edit</button></a>
                 <% if(_.contains(completed, 'policies') && ! _.contains(completed, 'payment')){ %>   
                 <a href="/admin/payments/<%=property_id%>">
                        <button class="btn btn-block btn-primary loginBtn saveBtn px-4">Save & Continue</button>
                </a>
                <% } %>
                </div>
        </div>
        <%-include('../shared/footer.ejs')%>