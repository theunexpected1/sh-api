<%-include('../shared/header.ejs',{active:'',parent:'settings'})%>
    <div class="content-inner">
        <!-- Page Header-->
        <header class="page-header">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item" aria-current="page">
                            <a href="#">General Settings</a>
                        </li>
                        <li class="breadcrumb-item active fw-700" aria-current="page">Taxes</li>
                    </ol>
                </nav>
            </div>
        </header>
        <div class="container-fluid">
            <div class="row wrapper mt-0 mb-0 pt-4 bg-white pb-2 px-4">
                <div class="col-sm-12 mb-2 mb-md-3">
                    <div class="form-header mt-2">
                        Taxes
                    </div>
                </div>
                <div class="col-sm-12 mt-2 mt-md-3 mb-2 mb-md-2">
                    <!-- <div class="header-buttons d-flex justify-content-end">
                        <button type="button" class="btn btn-primary mr-md-4" data-toggle="modal" data-target=".bd-example-modal-lg" data-whatever="@mdo">
                            <i class="icon-plus-circle"></i>Add New</button>
                    </div> -->
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-12 text-left" style="overflow-x:auto">
                    <table class="table table-hover" style="overflow-x:scroll;">
                        <thead class="mt-5">
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% taxes.forEach(tax=>{ %>
                                <tr>
                                    <td style="width: 75%" class="d-flex align-items-center col-10">
                                        <%=tax.name%>
                                            <% if(tax.image){ %>
                                                <img src="/<%=tax.image%>" alt="" class="ml-4" width="45px">
                                                <% } %>
                                    </td>
                                    <td style="width: 6.33%">
                                        <a id="show-panel" class="editBtn" href="#" data-id="<%=tax._id%>">
                                            <i class="icon-edit font-lg"></i>
                                        </a>
                                    </td>
                                    <!-- <td style="width: 8.33%" class="col-2">
                                        <a id="show-panel" class="deleteBtn" href="#" data-id="<%=tax._id%>">
                                            <i class="icon-trash-2 font-lg"></i>
                                        </a>
                                    </td> -->
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="modal bd-example-modal-lg" id="newModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">New Tax</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="newTaxForm" enctype="multipart/form-data">
                            <div class="row wrapper mt-4 mb-5 bg-white align-items-center">
                                <div class="col-sm-6 mt-2 mt-md-3 mb-2 mb-md-2">
                                    <div class="form-inline row">
                                        <label for="inputPassword" class="col-sm-3 col-form-label">Tax</label>
                                        <div class="col-sm-9">
                                            <input name="tax" type="text" class="form-control border-secondary" placeholder="Please Enter Tax">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 mt-2 mt-md-3 mb-2 mb-md-2">
                                    <div class="form-inline row">
                                        <label for="inputPassword" class="col-sm-3 col-form-label">Value(%)</label>
                                        <div class="col-sm-9">
                                            <input name="value" type="text" class="form-control border-secondary" placeholder="Please Enter Tax value">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 mt-3 mt-md-5 mb-2 mb-md-2">
                                    <div class="header-buttons d-flex justify-content-center">
                                        <button type="submit" class="btn btn-primary btn-lg mr-md-4 pl-5 pr-5 saveBtn">Save</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal bd-example-modal-lg" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Update Tax</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="editTaxForm" enctype="multipart/form-data">
                            <div class="row wrapper mt-4 mb-5 bg-white align-items-center">
                                <div class="col-sm-6 mt-2 mt-md-3 mb-2 mb-md-2">
                                    <div class="form-inline row">
                                        <label for="inputPassword" class="col-sm-3 col-form-label">Tax</label>
                                        <div class="col-sm-9">
                                            <input type="hidden" name="id">
                                            <input name="tax" type="text" class="form-control border-secondary" placeholder="Please Enter Tax">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 mt-2 mt-md-3 mb-2 mb-md-2">
                                    <div class="form-inline row">
                                        <label for="inputPassword" class="col-sm-3 col-form-label">Value(%)</label>
                                        <div class="col-sm-9">
                                            <input name="value" type="text" class="form-control border-secondary" placeholder="Please Enter Value">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 mt-3 mt-md-5 mb-2 mb-md-2">
                                    <div class="header-buttons d-flex justify-content-center">
                                        <button type="submit" class="btn btn-primary btn-lg mr-md-4 pl-5 pr-5 saveBtn">Update</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <script>
            $.validator.addMethod("noHTML", function(value, element){
                    if(this.optional(element) || /<\/?[^>]+(>|$)/g.test(value)){
                        return false;
                    } else {
                        return true;
                    }
            },"HTML tags are Not allowed.");

            $("#imageUpload").on('change', function () {
                readURL(this, 1);
            });
            $("#imageUpload2").on('change', function () {
                readURL(this, 2);
            });
            $("#newTaxForm").validate({
                normalizer: function (value) {
                    return $.trim(value);
                },
                rules: {
                    tax: {
                        required: true,
                        noHTML:true
                    },
                    value: {
                        required: true,
                        number: true,
                        min: 1,
                        max:100,
                        noHTML:true
                    }
                },
                messages: {
                    tax: {
                        required: "Tax  must be required",
                    },
                    value: {
                        required: "Value  must be required",
                        number: "Value  must be numeric",
                        min: "Value  must be between 1 and 100",
                        max:"Value  must be between 1 and 100",
                    }
                },
                submitHandler: function (form) {
                    $('.saveBtn').prop('disabled', true);
                    var form = document.getElementById('newTaxForm');
                    var data = $(form).serialize();
                    $.ajax({
                        type: "POST",
                        url: "/taxes",
                        data: data,
                        dataType: 'json',
                        success: function (data) {
                            if (data.status == 1) {
                                if (data.message) {
                                    $.confirm({
                                        title: 'Success!',
                                        content: data.message,
                                        buttons: {
                                            ok: function () {
                                                document.getElementById("newTaxForm").reset();
                                                window.location.reload();
                                            }
                                        }
                                    });
                                    document.getElementById("newTaxForm").reset();
                                }
                            } else {
                                if (data.errors) {
                                    for (i = 0; i < data.errors.length; i++) {
                                        toastr["error"](data.errors[i]);
                                    }
                                }
                                if (data.message) {
                                    toastr["error"](data.message);
                                }
                            }
                            $('.saveBtn').prop('disabled', false);
                        },
                        error: function (error) {
                            $('.saveBtn').prop('disabled', false);
                        }
                    });
                    return false;
                }
            });
            $('.deleteBtn').on('click', function () {
                let id = $(this).data('id');
                $.confirm({
                    title: 'Warning',
                    buttons: {
                        continue: function () {
                            // alert(id);
                            $.ajax({
                                url: '/taxes/delete',
                                data: { id: id },
                                type: 'get',
                                async: false,
                                success: function (data) {
                                    window.location.reload();
                                }
                            });
                        },
                        cancel: function () {

                        }
                    }
                });
            });
            $('.editBtn').on('click', function () {
                let id = $(this).data('id');
                $.ajax({
                    url: '/taxes/' + id,
                    type: 'get',
                    dataType: 'json',
                    success: function (data) {
                        if (data.status == 1) {
                            let res = data.data;
                            $('#editModal').modal('toggle');
                            var form = $('form#editTaxForm');
                            $(form).find("input[name='tax']").val(res.name);
                            $(form).find("input[name='value']").val(res.value);
                            $(form).find("input[name='id']").val(res._id);
                        }
                    }
                });
                // console.log();
            });
            $("#editTaxForm").validate({
                normalizer: function (value) {
                    return $.trim(value);
                },
                rules: {
                    tax: {
                        required: true,
                        noHTML:true
                    },
                    value: {
                        required: true,
                        number: true,
                        min: 1,
                        max:100,
                        noHTML:true
                    }
                },
                messages: {
                    tax: {
                        required: "Tax  must be required",
                    },
                    value: {
                        required: "Value  must be required",
                        number: "Value  must be numeric",
                        min: "Value  must be between 1 and 100",
                        max:"Value  must be between 1 and 100",
                    }
                },
                submitHandler: function (form) {
                    $('.saveBtn').prop('disabled', true);
                    var form = document.getElementById('editTaxForm');
                    var data = $(form).serialize();
                    $.ajax({
                        type: "POST",
                        url: "/taxes/update",
                        data: data,
                        dataType: 'json',
                        success: function (data) {
                            if (data.status == 1) {
                                if (data.message) {
                                    // $.confirm({
                                    //     title: 'Success!',
                                    //     content: data.message,
                                    //     buttons: {
                                    //         ok: function () {
                                    //             // document.getElementById("editPropertyTypeForm").reset();
                                    //         }
                                    //     }
                                    // });
                                    // // document.getElementById("editPropertyTypeForm").reset();
                                    // // $("#imagePreview2").css('background-image', 'url("/public/img/quickadd.png")');
                                    $('#editModal').modal('hide');
                                    toastr["success"](data.message);
                                }
                            } else {
                                if (data.errors) {
                                    for (i = 0; i < data.errors.length; i++) {
                                        toastr["error"](data.errors[i]);
                                    }
                                }
                                if (data.message) {
                                    toastr["error"](data.message);
                                }
                            }
                            $('.saveBtn').prop('disabled', false);
                        },
                        error: function (error) {
                            $('.saveBtn').prop('disabled', false);
                        }
                    });
                    return false;
                }
            });
        </script>
        <%-include('../shared/footer.ejs')%>