<%-include('../shared/header.ejs',{active:'properties',parent:'hotels-management'})%>
    <div class="content-inner">
        <!-- Page Header-->
        <header class="page-header">
            <div class="container-fluid d-flex flex-column flex-md-row justify-content-between align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="javascript:;">Hotel Management</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/properties">Properties</a>
                        </li>
                        <li class="breadcrumb-item active fw-700" aria-current="page">Photos</li>
                    </ol>
                </nav>
            </div>
        </header>
        <%-include('../shared/property_crump.ejs',{current_page:'photos'})%>
        
        <div class="container-fluid pb-0">
                <div class="row wrapper room-information justify-content-center align-items-center bg-white text-secondary">
                        <div class="col-lg-7 col-md-7 col-sm-12 col-12 room-information-items d-flex justify-content-between align-items-center flex-column flex-md-row flex-nowrap text-center">
                                <dl>
                                        <dt>Property Type</dt>
                                        <dd>
                                            <%=property.name %>
                                        </dd>
                                    </dl>
                                    <dl>
                                        <dt>Uploaded Photos</dt>
                                        <dd>
                                            <% if(property.images){%>
                                                <%=property.images.length%>
                                                    <% }else{ %>
                                                        <%=0%>
                                                            <% } %>
                                        </dd>
                                    </dl>
                        </div>
                        <div class="col-lg-4 col-md-5 col-sm-12 col-12 room-information-items d-flex justify-content-end align-items-center flex-column flex-md-row flex-nowrap text-center">
                            <dl>
                             <a href="/photos/update/<%=property._id%>"><button type="button" class="btn btn-sm btn-secondary">Update</button></a>
                            <dl>
                        </dl></dl></div>
                      </div>
        </div>
        <!-- container -->
        <div class="container-fluid pt-0 pb-0">
            <% rooms.forEach((room)=>{ %>
                <div class="row wrapper room-information justify-content-center align-items-center text-secondary bg-white mb-4">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-12 room-information-items d-flex justify-content-around align-items-center flex-column flex-md-row flex-nowrap text-center">
                        <dl>
                            <dt>Room Type</dt>
                            <dd>
                                <%=room.room_type.name %>
                            </dd>
                        </dl>
                        <dl>
                            <dt>Room Name</dt>
                            <dd>
                                <% if(room.custom_name){%>
                                    <%=room.custom_name%>
                                        <% }else{%>
                                            <%=room.room_name.name%>
                                                <% } %>
                            </dd>
                        </dl>
                        <dl>
                            <dt>Uplodaed Photos</dt>
                            <dd>
                                <% if(room.images){%>
                                    <%=room.images.length%>
                                        <% }else{ %>
                                            <%=0%>
                                                <% } %>
                            </dd>
                        </dl>
                        <dl class="d-flex align-items-center">
                                <a href="/photos/room/update/<%=room._id%>"><button type="button" class="btn btn-sm btn-secondary">Update</button></a>
                        </dl>
                    </div>
                </div>
                <% })%>
                <%- include('../shared/pagination') %>
                <% if(_.contains(completed, 'photos') && ! _.contains(completed, 'price')){ %>
                    <div class="col-sm-4 d-flex justify-content-center d-block mx-auto pt-3 pb-4">
                        <a href="/pricing/<%=property_id%>">
                            <button class="btn btn-block btn-primary loginBtn saveBtn px-4">Save & Continue</button>
                        </a>
                    </div>
                    <% } %>
        </div>
        <%-include('../shared/footer.ejs')%>